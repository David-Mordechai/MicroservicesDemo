{
  "Routes": [
    {
      "DownstreamPathTemplate": "/MapEntity",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "aero_mapEntities",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/mapEntity",
      "UpstreamHttpMethod": [ "GET", "POST" ]
    },

    {
      "DownstreamPathTemplate": "/maps",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "aero_mapsRepository",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/maps/addmap",
      "UpstreamHttpMethod": [ "POST" ]
    },

    {
      "DownstreamPathTemplate": "/{catchAll}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "aero_seq",
          "Port": 5341
        }
      ],
      "UpstreamPathTemplate": "/log/{catchAll}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ]
    },

    // Start SignalR configuration
    // first block for negotiation
    {
      "DownstreamPathTemplate": "/ws",
      "UpstreamPathTemplate": "/ws",
      "DownstreamScheme": "ws",
      "DownstreamHostAndPorts": [
        {
          "Host": "notifications_service",
          "Port": 80
        }
      ]
    },
    // second block for websocket connection
    {
      "DownstreamPathTemplate": "/ws/{catchAll}",
      "UpstreamPathTemplate": "/ws/{catchAll}",
      "DownstreamScheme": "ws",
      "DownstreamHostAndPorts": [
        {
          "Host": "notifications_service",
          "Port": 80
        }
      ]
    }
    // End SignalR configuration

  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000"
  }
}